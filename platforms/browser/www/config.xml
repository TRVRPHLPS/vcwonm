<?xml version='1.0' encoding='utf-8'?>
<widget id="com.virtogramma.app" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VIRTOGRAMMA</name>
    <description>
        ВЫБИРАЙТЕ И БРОНИРУЙТЕ ЛУЧШИЕ ЗАВЕДЕНИЕ КИЕВА В 3D!
    </description>
    <author email="v@unispot.plus" href="http://virtogramma.com">
        VIRTOGRAMMA by Unispot Plus
    </author>
    <content src="https://virtogramma.com" />
    <access origin="*" />
    <splash src="res/screen/android/screen-xxhdpi-portrait.png" />
    <allow-navigation href="https://virtogramma.com*" />
    <allow-navigation href="https://facebook.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="15000" />
    <preference name="FadeSplashScreenDuration" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="false" />
</widget>
