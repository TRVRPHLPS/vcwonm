<?xml version='1.0' encoding='utf-8'?>
<widget id="com.virtogramma.app" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VIRTOGRAMMA</name>
    <description>
        ВЫБИРАЙТЕ И БРОНИРУЙТЕ ЛУЧШИЕ ЗАВЕДЕНИЕ КИЕВА В 3D!
    </description>
    <author email="v@unispot.plus" href="http://virtogramma.com">
        VIRTOGRAMMA by Unispot Plus
    </author>
    <content src="https://virtogramma.com" />
    <access origin="*" />
	<access origin="https://virtogramma.com*" />
	<access origin="https://www.facebook.com*" />
	<access origin="https://m.facebook.com*" />
    <allow-navigation href="https://virtogramma.com*" />
    <allow-navigation href="https://m.facebook.com*" />
	<allow-navigation href="https://www.facebook.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	   <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
