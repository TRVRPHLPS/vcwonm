<?xml version='1.0' encoding='utf-8'?>
<widget id="com.virtogramma.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VIRTOGRAMMA</name>
    <description>
        ВЫБИРАЙТЕ И БРОНИРУЙТЕ ЛУЧШИЕ ЗАВЕДЕНИЕ КИЕВА В 3D!
    </description>
    <author email="v@unispot.plus" href="http://virtogramma.com">
        VIRTOGRAMMA by Unispot Plus
    </author>
    <content src="https://virtogramma.com" />
    <access origin="*" />
    <allow-navigation href="https://virtogramma.com*" />
    <allow-navigation href="https://facebook.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
